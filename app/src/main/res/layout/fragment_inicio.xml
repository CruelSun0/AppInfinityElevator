<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.InicioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicioTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineMenuInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2333333333333333"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3666666666666666"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4999999999999999"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicio5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6333333333333332"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineInicio6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7666666666666665"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineVInicio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineVInicio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/imgPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicioTitulo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/guideLineVInicio1"
                android:src="@drawable/perfil"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/black"/>

            <TextView
                android:id="@+id/msgPEstudante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicioTitulo"
                app:layout_constraintLeft_toRightOf="@id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@id/guideLineVInicio2"
                android:text="Olá estudante\no que deseja estudar?"
                android:textAlignment="center"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnQuiz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normalbtn"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicioTitulo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/guideLineVInicio2"
                android:text="Quiz"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/blue"
                android:textSize="18dp" />


            <Button

                android:id="@+id/btnPortugues"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="Português"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicioTitulo"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicio2"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:textSize="20sp"
                tools:ignore="NotSibling" />

            <Button
                android:id="@+id/btnMatematica"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicio2"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicio3"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:text="Matemática"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnIngles"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicio3"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicio4"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:text="Inglês"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnBiologia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicio4"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicio5"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:text="Biologia"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnQuimica"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicio5"
                app:layout_constraintBottom_toTopOf="@+id/guideLineInicio6"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:text="Química"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnInformatica"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintTop_toBottomOf="@+id/guideLineInicio6"
                app:layout_constraintBottom_toTopOf="@+id/guideLineMenuInicio"
                app:layout_constraintLeft_toRightOf="@+id/guideLineVInicio1"
                app:layout_constraintRight_toLeftOf="@+id/guideLineVInicio2"
                android:text="Informática"
                android:textSize="20sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>