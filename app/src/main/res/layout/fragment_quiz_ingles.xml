<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.QuizIngles">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sepEnunciadoXQuestoes"
        app:layout_constraintGuide_percent="0.3"/>

    <TextView
        android:id="@+id/textEnunciadoIngles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Alternativa aoowoefkefkwekfkewkfkekfqkfkewakfkwefkewkfkqekfekkfkewfkekqwefqwfweqefwq"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sepEnunciadoXQuestoes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24dip"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"/>

    <RadioGroup
        android:id="@+id/radioGQuizIngles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/sepEnunciadoXQuestoes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/radioButtonAIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="16pt"/>

        <RadioButton
            android:id="@+id/radioButtonBIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="16pt"/>

        <RadioButton
            android:id="@+id/radioButtonCIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="16pt"/>

        <RadioButton
            android:id="@+id/radioButtonDIngles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D"
            android:textSize="16pt"/>

    </RadioGroup>

    <TextView

        android:id="@+id/textPontosIngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oi!"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linhaCimaPontos"
        tools:ignore="MissingConstraints" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/linhaCimaPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />

</androidx.constraintlayout.widget.ConstraintLayout>